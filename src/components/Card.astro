---
import { Icon } from 'astro-icon'

export interface Props {
	title: string;
	img: string;
	href: string;
}

const { href, img, title } = Astro.props;
---

<li class="bg-slate-900 rounded-xl py-2 hover:bg-none transition-all duration-500">
	<a class="flex flex-col items-center" href={href} target="_blank">
		<Icon class="w-16 text-white px-2 rounded-lg" name={img} />
		<h2 class="text-lg font-semibold text-white">
			{title}
		</h2>
	</a>
</li>

<style>
	li:hover {
		background: none;
		scale: 1.1;
	}

	li:hover svg{
		color: rgb(30, 30, 30);
	}

	li:hover h2{
		color: black;
	}
</style>
